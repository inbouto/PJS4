package ihm;

import java.util.Scanner;

import core.interfaceIHM;

public class IHMV1 implements interfaceIHM{
	
	private Scanner sc;
	private String messageRecu = null;

	public IHMV1() {
		this.sc = new Scanner(System.in);
	}
	
	public void saisie() {
		this.messageRecu = sc.nextLine();
	}
	
	public String lecture(String msg) {		
		 System.out.println(msg);
		
	}
	
}
